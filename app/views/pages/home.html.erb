<div class="container mt-4">
  <div class="text-center mb-5">
    <h1 class="display-4 mb-3">Добро пожаловать в Reviews Hub!</h1>
    <p class="lead text-muted">Платформа для обмена отзывами о книгах и фильмах</p>
  </div>

  <div class="row mb-5">
    <div class="col-md-6">
      <div class="card h-100">
        <div class="card-body text-center">
          <i class="bi bi-book display-4 text-primary mb-3"></i>
          <h3 class="card-title">Книги</h3>
          <p class="card-text">Читайте и пишите отзывы на ваши любимые книги</p>
          <%= link_to 'Перейти к книгам', books_path, class: 'btn btn-primary' %>
        </div>
      </div>
    </div>
    <div class="col-md-6">
      <div class="card h-100">
        <div class="card-body text-center">
          <i class="bi bi-film display-4 text-info mb-3"></i>
          <h3 class="card-title">Фильмы</h3>
          <p class="card-text">Делитесь мнением о просмотренных фильмах</p>
          <%= link_to 'Перейти к фильмам', movies_path, class: 'btn btn-info' %>
        </div>
      </div>
    </div>
  </div>

  <!-- Последние отзывы -->
  <% if @reviews && @reviews.any? %>
    <div class="mt-5">
      <h2 class="text-center mb-4">Последние отзывы</h2>
      <div class="row">
        <% @reviews.each do |review| %>
          <div class="col-lg-6 mb-4">
            <div class="card h-100">
              <div class="card-body">
                <div class="d-flex justify-content-between align-items-start mb-2">
                  <h5 class="card-title mb-0">
                    <% if review.reviewable %>
                      <%= review.reviewable.title %>
                    <% else %>
                      <%= review.reviewable_type %> #<%= review.reviewable_id %>
                    <% end %>
                  </h5>
                  <span class="badge <%= review.reviewable_type == 'Book' ? 'bg-success' : 'bg-info' %>">
                    <%= review.reviewable_type == 'Book' ? 'Книга' : 'Фильм' %>
                  </span>
                </div>
                
                <p class="card-text text-muted small mb-3">
                  <i class="bi bi-person-circle"></i> <%= review.user.email %> • 
                  <i class="bi bi-calendar ms-2"></i> <%= review.created_at.strftime('%d.%m.%Y') %>
                </p>
                
                <div class="rating mb-3">
                  <% (1..5).each do |star| %>
                    <% if star <= review.rating %>
                      <i class="bi bi-star-fill text-warning"></i>
                    <% else %>
                      <i class="bi bi-star text-secondary"></i>
                    <% end %>
                  <% end %>
                  <span class="ms-2"><strong><%= review.rating %>/5</strong></span>
                </div>
                
                <p class="card-text">
                  <%= truncate(review.text, length: 100) %>
                </p>
                
                <div class="mt-3">
                  <%= link_to 'Читать отзыв', review_path(review), class: 'btn btn-sm btn-outline-primary' %>
                </div>
              </div>
            </div>
          </div>
        <% end %>
      </div>
      
      <div class="text-center mt-4">
        <%= link_to 'Все отзывы', reviews_path, class: 'btn btn-outline-secondary' %>
      </div>
    </div>
  <% elsif Review.table_exists? %>
    <div class="alert alert-info text-center">
      <h4 class="alert-heading">Пока нет отзывов</h4>
      <p>Будьте первым, кто оставит отзыв!</p>
      <div class="mt-2">
        <%= link_to 'Посмотреть книги', books_path, class: 'btn btn-sm btn-primary me-2' %>
        <%= link_to 'Посмотреть фильмы', movies_path, class: 'btn btn-sm btn-primary' %>
      </div>
    </div>
  <% end %>
</div>