<div class="container mt-4">
  <div class="row">
    <div class="col-md-8">
      <h1 class="display-5 mb-3"><%= @movie.title %></h1>
      <h4 class="text-muted mb-4">Режиссер: <%= @movie.director %></h4>
      <div class="rating-section mb-4 p-3 bg-light rounded">
        <h5>Рейтинг фильма</h5>
        <div class="d-flex align-items-center">
          <div class="average-rating me-3">
            <span class="display-6"><strong><%= @movie.average_rating %></strong></span>
            <span class="text-muted">/5</span>
          </div>
          <div class="stars me-3">
            <% (1..5).each do |star| %>
              <% if star <= @movie.average_rating.round %>
                <i class="bi bi-star-fill text-warning fs-4"></i>
              <% elsif star - 0.5 <= @movie.average_rating %>
                <i class="bi bi-star-half text-warning fs-4"></i>
              <% else %>
                <i class="bi bi-star text-secondary fs-4"></i>
              <% end %>
            <% end %>
          </div>
          <div class="reviews-count">
            <span class="badge bg-secondary"><%= @movie.reviews_count %> отзывов</span>
          </div>
        </div>
      </div>
      <div class="description mb-5">
        <h5>Описание</h5>
        <p class="lead"><%= @movie.description %></p>
      </div>
    </div>
    <div class="reviews-section mt-5">
      <h3 class="mb-4">Отзывы</h3>
      <% if @reviews.any? %>
        <% @reviews.each do |review| %>
          <div class="review-card mb-4 p-4 border rounded">
            <div class="d-flex justify-content-between align-items-start mb-2">
              <div>
                <h6 class="mb-1">
                  <%= review.user.email %>
                  <small class="text-muted">• <%= l(review.created_at, format: :short) %></small>
                </h6>
                <div class="rating mb-2">
                  <% (1..5).each do |star| %>
                    <% if star <= review.rating %>
                      <i class="bi bi-star-fill text-warning"></i>
                    <% else %>
                      <i class="bi bi-star text-secondary"></i>
                    <% end %>
                  <% end %>
                  <span class="ms-2"><strong><%= review.rating %>/5</strong></span>
                </div>
              </div>
              <% if user_signed_in? && review.user == current_user %>
                <div class="review-actions">
                  <%= link_to 'Редактировать', edit_movie_review_path(@movie, review), 
                    class: 'btn btn-sm btn-outline-primary me-1' %>
                  <%= button_to 'Удалить', movie_review_path(@movie, review), 
                    method: :delete, 
                    data: { confirm: 'Вы уверены?' }, 
                    class: 'btn btn-sm btn-outline-danger' %>
                </div>
              <% end %>
            </div>
            <p class="mb-0"><%= review.text %></p>
          </div>
        <% end %>
      <% else %>
        <div class="alert alert-info">
          <p class="mb-0">Пока нет отзывов на этот фильм. Будьте первым!</p>
        </div>
      <% end %>
    </div>
  </div>