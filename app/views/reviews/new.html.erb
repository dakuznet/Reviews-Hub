<div class="container mt-4">
  <div class="row justify-content-center">
    <div class="col-md-8">
      <div class="card">
        <div class="card-header">
          <h2 class="mb-0">Новый отзыв</h2>
        </div>
        <div class="card-body">
          <h4 class="card-title mb-4">
            <% if @reviewable.is_a?(Book) %>
              Книга: <strong><%= @reviewable.title %></strong>
            <% elsif @reviewable.is_a?(Movie) %>
              Фильм: <strong><%= @reviewable.title %></strong>
            <% end %>
          </h4>
          
          <%# Рендерим форму для отзыва %>
          <%= render 'form' %>
        </div>
      </div>
    </div>
  </div>
</div>