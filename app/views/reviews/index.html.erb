<div class="container mt-4">
  <div class="text-center mb-5">
    <h1 class="display-4 mb-3">Лента отзывов</h1>
  </div>

  <% if @reviews.any? %>
    <div class="row">
      <% @reviews.each do |review| %>
        <div class="col-lg-6 mb-4">
          <div class="card h-100">
            <div class="card-body">
              <div class="d-flex justify-content-between align-items-start mb-2">
                <h5 class="card-title mb-0">
                  <%= link_to review.reviewable.title, polymorphic_path(review.reviewable), 
                      class: 'text-decoration-none' %>
                </h5>
                <span class="badge <%= review.reviewable_type == 'Book' ? 'bg-success' : 'bg-info' %>">
                  <%= review.reviewable_type == 'Book' ? 'Книга' : 'Фильм' %>
                </span>
              </div>
              
              <p class="card-text text-muted small mb-3">
                <i class="bi bi-person-circle"></i> <%= review.user.email %> • 
                <i class="bi bi-calendar ms-2"></i> <%= l(review.created_at, format: :short) %>
              </p>
              
              <div class="rating mb-3">
                <% (1..5).each do |star| %>
                  <% if star <= review.rating %>
                    <i class="bi bi-star-fill text-warning"></i>
                  <% else %>
                    <i class="bi bi-star text-secondary"></i>
                  <% end %>
                <% end %>
                <span class="ms-2"><strong><%= review.rating %>/5</strong></span>
              </div>
              
              <p class="card-text">
                <%= truncate(review.text, length: 150) %>
              </p>
              
              <div class="mt-3">
                <%= link_to 'Читать полностью', review_path(review), class: 'btn btn-sm btn-outline-primary' %>
              </div>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  <% else %>
    <div class="alert alert-info text-center">
      <h4 class="alert-heading">Пока нет отзывов</h4>
      <p>Будьте первым, кто оставит отзыв!</p>
    </div>
  <% end %>
</div>