<div class="container mt-4">
  <div class="row justify-content-center">
    <div class="col-md-8">
      <div class="card">
        <div class="card-header">
          <h2 class="mb-0">Редактировать отзыв</h2>
        </div>
        <div class="card-body">
          <h4 class="card-title mb-4">
            <% if @review.reviewable.is_a?(Book) %>
              Книга: <strong><%= @review.reviewable.title %></strong>
            <% elsif @review.reviewable.is_a?(Movie) %>
              Фильм: <strong><%= @review.reviewable.title %></strong>
            <% end %>
          </h4>
          
          <%= render 'form' %>
        </div>
      </div>
    </div>
  </div>
</div>